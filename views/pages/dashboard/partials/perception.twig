{% extends "pages/dashboard/dashboard.twig" %}

{% block h3 %}
	Liste des techniciens
{% endblock %}

{% block content %}
	<div id="card-container" class="grid grid-cols-4 gap-4 max-w-full mx-auto">

		{% for technician in technicians %}
			
			<form action="/perception/{{toolId}}" method="POST">
				<input type="hidden" name="userId" value="{{technician.id}}">

				<button type="submit" class="w-full text-left cursor-pointer transition-transform duration-200 ease-in-out hover:-translate-y-1 ">
					<div class="border border-gray-300 shadow-lg shadow-blue-100 rounded-2xl flex justify-center gap-6 py-6 px-7 hover:bg-gray-50">
						<div>
							<div class="w-full flex justify-center">
								<img class="w-24 h-24 p-2 rounded-full object-cover" src={{technician.photo}} alt="">
							</div>
							<div class="pt-4 flex flex-col">
								<p class="font-bold text-2xl mb-2">
									{{technician.lastName|capitalize}}
									<span class="font-medium">{{technician.firstName|capitalize}}</span>
								</p>
								<p class="font-thin text-2xl mb-10">
									Aeronef :
									<span class="font-semibold">{{technician.aeronef.immat}}</span>
								</p>
							</div>
						</div>
					</div>
				</button>
			</form>

		{% endfor %}

	</div>
{% endblock %}
